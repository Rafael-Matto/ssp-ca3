<!DOCTYPE html>
<html lang="en" class="no-js">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Jobs Portal - Home</title>
  

    <link rel="shortcut icon" href="images/favicon.ico" />

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css" />

    <!--Material Icon -->
    <link
      rel="stylesheet"
      type="text/css"
      href="css/materialdesignicons.min.css"
    />

    <link rel="stylesheet" type="text/css" href="/css/fontawesome.css" />

    <!-- selectize css -->
    <link rel="stylesheet" type="text/css" href="/css/selectize.css" />

    <!--Slider-->
    <link rel="stylesheet" href="/css/owl.carousel.css" />
    <link rel="stylesheet" href="/css/owl.theme.css" />
    <link rel="stylesheet" href="/css/owl.transitions.css" />

    <!-- Custom  Css -->
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>

  <body>
    <!-- Loader -->
    <div id="preloader">
      <div id="status">
        <div class="spinner">
          <div class="double-bounce1"></div>
          <div class="double-bounce2"></div>
        </div>
      </div>
    </div>
    <!-- Loader -->

    <!-- Navigation Bar-->
    <header id="topnav" class="defaultscroll scroll-active">
      <!-- Tagline STart -->

      <!-- Tagline End -->

      <!-- Menu Start -->
      <div class="container">
        <!-- Logo container-->
        <div>
          <a href="/" class="logo">
            <img
              src="images/logo-light.png"
              alt=""
              class="logo-light"
              height="18"
            />
            <img
              src="images/logo-dark.png"
              alt=""
              class="logo-dark"
              height="18"
            />
          </a>
        </div>
        <div class="buy-button">
          <a href="/postJob" class="btn btn-primary"
            ><i class="mdi mdi-cloud-upload"></i> Post a Job</a
          >
        </div>
        <!--end login button-->
      </div>
      <!--end container-->
      <!--end end-->
    </header>
    <!--end header-->
    <!-- Navbar End -->

    <!-- Start Home -->
    <section
      class="bg-home"

      style="
        background: url('/images/hero.jpeg')
          center center;
          background-repeat: no-repeat;
          background-size: cover;
      "
    >
      <div class="bg-overlay"></div>
      <div class="home-center">
        <div class="home-desc-center">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-lg-12">
                <div class="title-heading text-center text-white">
                  <h6 class="small-title text-uppercase text-light mb-3">
                    Find jobs, create trackable resumes and enrich your
                    applications.
                  </h6>
                  <h1 class="heading font-weight-bold mb-4">
                    The Easiest Way to Get Your New Job
                  </h1>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- end home -->
<!-- Flash messages start -->
<div class="container">
<% success.forEach(function(msg){%>
<div class="alert alert-success text-center mt-4"><%=msg%></div>
<%})%>
<% errors.forEach(function(msg){%>
  <div class="alert alert-danger text-center mt-4"><%=msg%></div>
  <%})%>
</div>
<div></div>

    <!-- all jobs start -->
    <section class="section bg-light">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-9 text-center mt-4 pt-2">
            <div class="section-title text-center mb-4 pb-2">
              <h4 class="title title-line pb-5">Find Your Jobs</h4>
              <p class="text-muted para-desc mx-auto mb-1">
                Post a job to tell us about your project. We'll quickly match
                you with the right freelancers.
              </p>
              </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="tab-content mt-2" id="pills-tabContent">
              <div
                class="tab-pane fade show active"
                id="recent-job"
                role="tabpanel"
                aria-labelledby="recent-job-tab"
              >
                <%let jobs = JSON.stringify(jobsdata)%>
                <% let listing = JSON.parse(jobs) 
                if(listing.length === 0){%>
                    <h1 class="text-center">&#128528; Oops no Jobs at the moment</h1>
                 <%}else{ %>
                <% listing.slice().reverse().forEach((item) => {%>
                <div class="row">
                  <div class="col-lg-12">
                    <div
                      class="job-box bg-white overflow-hidden border rounded mt-4 position-relative overflow-hidden"
                    >
                      <div class="lable text-center pt-2 pb-2">
                        <ul
                          class="list-unstyled best text-white mb-0 text-uppercase"
                        >
                          <li class="list-inline-item">
                            <i class="mdi mdi-star"></i>
                          </li>
                        </ul>
                      </div>
                      <div class="p-4">
                        <div class="row align-items-center">
                          <div class="col-md-2">
                            <div class="mo-mb-2">
                              <img
                                src="images/hire.jpg"
                                alt=""
                                class="img-fluid mx-auto d-block"
                              />
                            </div>
                          </div>
                          <div class="col-md-3">
                            <div>
                              <h5 class="f-18">
                                <a href="/jobdetail/<%= item.id %>" class="text-dark"><%= item.jobTitle %></a>
                              </h5>
                              <p class="text-muted mb-0">
                                <%= item.companyName %>
                              </p>
                            </div>
                          </div>
                          <div class="col-md-3">
                            <div>
                              <p class="text-muted mb-0">
                                <i
                                  class="mdi mdi-map-marker text-primary mr-2"
                                ></i
                                ><%= item.location %>
                              </p>
                            </div>
                          </div>
                          <div class="col-md-2">
                            <div>
                              <p class="text-muted mb-0 mo-mb-2">
                                <span class="text-primary">$</span><%= item.salary %>
                              </p>
                            </div>
                          </div>
                          <div class="col-md-2">
                            <div>
                              <p class="text-muted mb-0"><%= item.type %></p>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="p-3 bg-light">
                        <div class="row">
                          <div class="col-md-5">
                            <div>
                              <p class="text-muted mb-0 mo-mb-2">
                                <span class="text-dark">Experience :</span> 0 - <%= item.experience %> years
                              </p>
                            </div>
                          </div>
                          <div class="col-md-3">
                            <div>
                              <a href="/editpost/<%= item.id %>" class="text-warning"
                                >Edit post
                                <i class="mdi mdi-chevron-double-right"></i
                              ></a>
                            </div>
                          </div>
                            <div class="col-md-2">
                              <div>
                                <a href="/removepost/<%= item.id %>" class="text-danger confirmation"
                                  >Delete
                                  <i class="mdi mdi-chevron-double-right"></i
                                ></a>
                              </div>
                            </div>
                          <div class="col-md-2">
                            <div>
                              <a href="/jobdetail/<%= item.id%>" class="text-primary" 
                                >Apply Now
                                <i class="mdi mdi-chevron-double-right"></i
                              ></a>
                            </div>
                          </div>
                        </div>
                      </div>
                </div>
                <%})
            }%>
    </section>
    
    <hr />
    <footer class="footer footer-bar">
      <div class="container text-center">
        <div class="row justify-content-center">
          <div class="col-12">
            <div class="">
              <p class="mb-0">
                Â© 2022 Jobs Portal.
              </p>
            </div>
          </div>
        </div>
      </div>
      <!--end container-->
    </footer>
    <!--end footer-->
    <!-- Footer End -->

    <!-- Back to top -->
    <a href="#" class="back-to-top rounded text-center" id="back-to-top">
      <i class="mdi mdi-chevron-up d-block"> </i>
    </a>
    <!-- Back to top -->

    <!-- javascript -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/jquery.easing.min.js"></script>
    <script src="/js/plugins.js"></script>

    <!-- selectize js -->
    <script src="/js/selectize.min.js"></script>
    <script src="/js/jquery.nice-select.min.js"></script>

    <script src="/js/owl.carousel.min.js"></script>
    <script src="/js/counter.int.js"></script>

    <script src="/js/app.js"></script>
    <script src="/js/home.js"></script>
    <script type="text/javascript">
      var elems = document.getElementsByClassName('confirmation');
      var confirmIt = function (e) {
          if (!confirm('Are you sure?')) e.preventDefault();
      };
      for (var i = 0, l = elems.length; i < l; i++) {
          elems[i].addEventListener('click', confirmIt, false);
      }
  </script>
  </body>
</html>
